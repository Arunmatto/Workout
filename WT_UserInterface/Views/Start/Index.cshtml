@model IEnumerable<WT_UserInterface.ViewModels.WorkoutViewModel>

@{
    ViewBag.Title = "WORKOUTS";
}

<h2>WORKOUTS</h2>


<table  class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Workout_title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Workout_category)
        </th>
        <th></th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Workout_title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Workout_category)
        </td>
        <td>
            <div class="btn btn-success" style="color:ivory">@Html.ActionLink("Start Workout", "StartWorkout", "Start", new { Id = item.Id }, null)</div>
        </td>
        <td>
            <div class="btn btn-danger" style="color:ivory">@Html.ActionLink("End Workout", "", "Start", new { Id = item.Id })</div>
        </td>

    </tr>
}

</table>
